<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/pinmoment"
    android:background="@drawable/bg_timelinelive_min">

    <ImageView
        android:layout_width="320dp"
        android:layout_height="350dp"
        android:id="@+id/imageview"
        android:layout_marginTop="130dp"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:id="@+id/backbutton"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/back_icon"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:id="@+id/minute"
        android:textSize="40dp"
        android:text="30'"
        android:layout_marginLeft="80dp"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:id="@+id/topbackground"
        android:layout_width="fill_parent"
        android:background="@color/red_accent"
        android:layout_height="75dp"
        />

    <ImageView
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:id="@+id/likebutton"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/soccerball"
        android:layout_marginTop="-30dp"
        android:layout_marginLeft="-30dp"/>

    <TextView
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:id="@+id/addreaction"
        android:background="@drawable/rounded_corner"
        android:textSize="15dp"
        android:textColor="@color/numbers"
        android:text="+add reaction"
        android:layout_marginRight="10dp"
        android:layout_marginTop= "22dp"
        />

    <Button
        android:id="@+id/videobutton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Take video"
        android:layout_below="@+id/topbackground"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
