<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/pinmoment"
    android:background="@drawable/bg_timelinelive_min">

    <ImageView
        android:id="@+id/topbackground"
        android:layout_width="fill_parent"
        android:background="@color/red_accent"
        android:layout_height="75dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/choose"
        android:text="Choose League"
        android:textSize="30dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:id="@+id/bundes"
        android:layout_below="@+id/topbackground"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bundesligabutton"
        />

    <ImageView
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:id="@+id/premier"
        android:layout_below="@+id/bundes"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/premierleaguebutton"
        />

    <ImageView
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:id="@+id/liga"
        android:layout_below="@+id/premier"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/laligabutton"
        />


    <ImageView
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:id="@+id/backbutton"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/back_icon"
        />



</RelativeLayout>

